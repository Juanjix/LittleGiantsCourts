---
import { Image } from 'astro:assets';
import logo from "../assets/lgc-background.png"
const { titulo = "La primer mini cancha de paddle pensada para chicos", subtitulo = "Port√°til, segura y creada para divertirse en familia", imagen = '', buttonText = 'WhatsApp', buttonText2 = 'Contacto', whatsapp = '' } = Astro.props;
---

<style>
  section {
    position: relative;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .background-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5); /* Oscurece la imagen para que el texto se lea mejor */
    z-index: 1;
  }

  .contenido {
    position: relative;
    z-index: 2;
  }
</style>

<section>
  <img src={logo.src} alt="Fondo" class="background-img" />
  <div class="overlay"></div>

  <!-- Contenido -->
  <div class="contenido flex flex-col justify-center h-full max-w-7xl px-8 mx-auto text-white">
    <div class="max-w-lg">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">{titulo}</h1>
      <p class="text-lg md:text-xl mb-8">{subtitulo}</p>
      <div class="flex gap-4">
        <a 
          href={`https://wa.me/${whatsapp}`} 
          target="_blank" 
          class="px-6 py-3 bg-green-500 hover:bg-green-600 rounded-lg font-semibold transition"
        >
          {buttonText}
        </a>
        <a 
          href="#otra-seccion" 
          class="px-6 py-3 bg-transparent text-white border hover:border-secondary rounded-lg font-semibold transition"
        >
          {buttonText2}
        </a>
      </div>
    </div>
  </div>
</section>
